# PagerDuty Configuration
# Option 1: OAuth Authentication (requires creating an OAuth app)
NEXT_PUBLIC_PAGERDUTY_CLIENT_ID=your_pagerduty_client_id
PAGERDUTY_CLIENT_SECRET=your_pagerduty_client_secret
PAGERDUTY_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Option 2: API Token Authentication (no OAuth app needed)
# Users can sign in with their PagerDuty User API Token
# Find it at: PagerDuty > User Icon > My Profile > User Settings > API Access

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl_rand_base64_32

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CalOohPay Web

# API Configuration (timeout in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_CSV_EXPORT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development
NODE_ENV=development
