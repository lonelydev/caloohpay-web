{
  "name": "caloohpay-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "ENABLE_TEST_SESSION_SEED=false playwright test",
    "test:e2e:ui": "ENABLE_TEST_SESSION_SEED=false playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:seeded": "ENABLE_TEST_SESSION_SEED=true NEXTAUTH_SECRET=dev-e2e-secret playwright test --project=\"chromium (seeded)\" --project=\"firefox (seeded)\" --project=\"webkit (seeded)\"",
    "test:e2e:seeded:ui": "ENABLE_TEST_SESSION_SEED=true NEXTAUTH_SECRET=dev-e2e-secret playwright test --ui --project=\"chromium (seeded)\" --project=\"firefox (seeded)\" --project=\"webkit (seeded)\"",
    "test:e2e:unauth": "ENABLE_TEST_SESSION_SEED=false playwright test --project=\"chromium (unauth)\" --project=\"firefox (unauth)\" --project=\"webkit (unauth)\"",
    "test:e2e:unauth:ui": "ENABLE_TEST_SESSION_SEED=false playwright test --ui --project=\"chromium (unauth)\" --project=\"firefox (unauth)\" --project=\"webkit (unauth)\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "postinstall": "node -e \"if (process.env.VERCEL !== '1') require('child_process').execSync('playwright install --with-deps chromium', {stdio: 'inherit'})\""
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fullcalendar/core": "^6.1.20",
    "@fullcalendar/daygrid": "^6.1.20",
    "@fullcalendar/interaction": "^6.1.20",
    "@fullcalendar/luxon3": "^6.1.20",
    "@fullcalendar/react": "^6.1.20",
    "@hookform/resolvers": "^5.2.2",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@pagerduty/pdjs": "^2.2.4",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.13.2",
    "caloohpay": "^2.1.0",
    "date-fns": "^4.1.0",
    "he": "^1.2.0",
    "luxon": "^3.7.2",
    "next": "^16.1.1",
    "next-auth": "^4.24.13",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "swr": "^2.3.6",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/he": "^1.2.3",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
